{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "lib",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "strict": true,
    "pretty": true,
    "declaration": true,
    "lib": ["es2015", "es2017"],
    "isolatedModules": false,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*"],
  "exclude": [
    "./src/**/*.test.ts",
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
